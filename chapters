--chapter08 1),5),7)
select onum, cname
from Orders, Customers
where Orders.cnum = Customers.cnum

select cname, sname,comm
from Customers c join Orders o on c.cnum = o.cnum
   join Salespeople s on s.snum = o.snum 
where  comm > 0.12

select cname, onum, amt*comm as sum_tax 
from Customers c join Orders o on c.cnum = o.cnum
   join Salespeople s on s.snum = o.snum 
where rating > 100

